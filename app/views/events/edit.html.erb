<%= form_for @event, :url => event_path(@event), :method => :patch, :class => "form" do |f| %>

<div class="form-group">
  <%= f.label :name, "主題" %>
  <%= f.text_field :name, :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.file_field :logo %>
  <% if @event.logo.exists? %>
    <%= check_box_tag "_remove_logo", "1" %>移除圖片
  <% end %>
</div>

<div class="form-group">
  <%= f.label :description, "內容" %>
  <%= f.text_area :description, :class => "form-control" %>
</div>

<% if @event.logo.exists? %>
  <%= image_tag( @event.logo.url(:medium) ) %>
<% else %>
  None  
<% end %>

<div class="form-group">
  <%= f.label :status, "狀態" %>
  <%= f.text_area :status, :class => "form-control" %>
</div>

<%= f.collection_select(:category_id, Category.all, :id, :name) %>

<%= f.submit "更新", :class => "btn btn-primary" %>
<% end %>
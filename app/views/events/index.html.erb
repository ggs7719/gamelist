<h1>Jimmy Hoo's Game List</h1>
<table class="table">
<% @events.each do |event| %>
  <tr>
    <td>
 	<%= event.name %>
 	</td>

 	<td>
    <%= link_to "Show", event_path(event), :class => "btn btn-primary" %>
    <%= link_to 'Edit', edit_event_path(event), :class => "btn btn-warning" %>
    <%= link_to 'Delete', event_path(event), :method => :delete, :data => { :confirm => "認真的？" }, :class => "btn btn-danger" %>
    </td>
  </tr>
<% end %>

</table>

<%= paginate @events %>
<%= link_to 'New Event', new_event_path, :class => "btn btn-primary" %>